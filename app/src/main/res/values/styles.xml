<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 颜色定义 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--窗口背景-->
        <item name="android:windowBackground">@color/colorBackGround</item>
    </style>

    <style name="Theme.StatusBar.Translucent.Color" parent="AppTheme">
    </style>

    <style name="Theme.StatusBar.Translucent.Image" parent="AppTheme">
    </style>

    <style name="TextAppearance.BigTitle.FF" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextAppearance.Title1.FF" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextAppearance.Title2.FF" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.Body1.FF" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.SubTitle.FF" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="CollapsingToolbarTitleStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

</resources>
